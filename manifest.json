{
  "manifest_version": 2,

  "name": "Password Hasher",
  "short_name": "Hasher",
  "description": "Converts weak passwords to domain specific strong ones",
  "version": "1.1",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
	"icons": { 
			"16":"icon.png", 
			"48":"icon.png", 
			"128":"icon.png" 
	}, 
  "permissions": [
    "activeTab",
	"storage"
  ],
  
  "author": "Arnab Bose"
}