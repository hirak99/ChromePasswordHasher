{
  "manifest_version": 2,

  "name": "Password Hasher",
  "description": "Converts weak passwords to domain specific strong ones",
  "version": "1.0",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
	"storage"
  ],
  
  "author": "Arnab Bose"
}